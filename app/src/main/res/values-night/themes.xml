<resources>
    <!-- Base application theme. -->
    <style name="Theme.EventApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorPrimaryContainer">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:windowBackground">@color/white</item>-->
    </style>
    <!-- Base application theme. -->

    <style name="BottomNavigationStyle">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="AppBarStyle">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="BaseContainerStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BaseContainerSecondaryStyle">
        <item name="android:background">@color/grey</item>
        <item name="android:backgroundTint">@color/grey</item>
    </style>

    <style name="TextBadge">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LayoutAnimationStyle">
        <item name="android:background">#CC000000</item>
    </style>
</resources>